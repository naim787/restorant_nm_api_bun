generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id      String @id
  name    String
  email   String
  password String
  bis_loc  String @map("bis_loc")
  date_loc String @map("date_loc")
  year    String
  role    String

  @@map("users")
}

model Products {
  id          String  @id
  name        String
  description String
  category    String
  price       Decimal
  stock       Decimal
  image_url   String  @map("image_url")

  @@map("products")
}

model Pesnan {
  id       Int    @id @default(autoincrement())
  products_id String 
  table_id  String @map("table_id")
  waiter_name String @map("waiter_name")
  time     String
  status String
  @@unique([products_id, table_id, time])
  @@map("pesnan")
}